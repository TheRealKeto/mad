#!/usr/bin/env bash

VERSION="@MAD_VERSION@"

BINPATH=$0
if [ -h "$BINPATH" ]; then
    BINPATH=$(readlink "$BINPATH")
fi
MAD_ROOT=$(dirname "$BINPATH")
CONFIG=${MAD_ROOT}/../etc/mad.conf
MAD_CONFIG=${MAD_CONFIG:-$CONFIG}

#
# List all <pages>
#

list_pages() {
  IFS=":"
  _paths="$MAD_PATH:/usr/local/share/mad:/usr/share/mad"

  printf "\n  \033[1mmad pages:\033[0m\n\n"
  for path in $_paths; do
    test ! -z "$path" \
      && test -d "$path" \
      && find "$path" -type f \
      | xargs -n1 basename \
      | grep -iv '^readme' \
      | grep '.md$' \
      | perl -pe 's|^(.*)\.md$|    \1|;'
  done
  printf "\n"
}

#
# Display <page> with lookup via MAD_PATH.
#

display() {
  IFS=":"
  page="$1"
  paths=".:$MAD_PATH:${MAD_ROOT}/../share/mad:/usr/share/mad"

  for path in $paths; do
    file="$path"/"$page"
    ext="$path"/"$page".md
    [[ -f "$file" ]] && display_file "$file"
    [[ -f "$ext" ]]  && display_file "$ext"
  done

  printf "\nFailed to locate '%s'\n\nMAD_PATH=\"%s\"\n" "$page" "$paths"
  exit 1
}

#
# Get <prop> from config.
#

get() {
  grep "^$1:" "$MAD_CONFIG" | awk '{ print $2 }'
}

#
# Display from stdin.
#

display_from_stdin() {
  display_file <(cat)
}

#
# Display <file>
#

display_file() {
  heading=$(get heading)
  code=$(get code)
  link=$(get link)
  url=$(get url)
  strong=$(get strong)
  em=$(get em)

  < "$1" perl -pe "
      s|^#+ *(.+)|\e[$heading\1\e[0m|g; \
      s|\`(.+?)\`|\e[$code\1\e[0m|g; \
      s|\*\*(.+?)\*\*|\e[$strong\1\e[0m|g; \
      s|__(.+?)__|\e[$strong\1\e[0m|g; \
      s|\*(.+?)\*|\e[$em\1\e[0m|g; \
      s|_(.+?)_|\e[$em\1\e[0m|g; \
      s|    (.+)|    \e[$code\1\e[0m|g; \
      s|\[(.+)\]\((.+)\)|\e[$em\e[$link\1\e[0m \e[$url(\2)\e[0m|g; \
      s^<((ftp|http)s?://.+?)>^\e[$em\e[$link\1\e[0m^g; \
      s|<(.+?)>||g; \
      s|^|  |;" \
    | less -R
  exit
}

#
# Display the usage for mad(1).
#

display_mad_usage() {
  display_file "${MAD_ROOT}"/../share/mad/mad.md
  exit
}

# file required

[[ -z "$1" ]] && display_mad_usage

# parse args

case $1 in
  -v|--version)
    echo $VERSION
    ;;
  -h|--help|help)
    display_mad_usage
    ;;
  -l|--list|ls|list)
    list_pages
    ;;
  -)
    display_from_stdin
    ;;
  *)
    display "$1"
    ;;
esac
